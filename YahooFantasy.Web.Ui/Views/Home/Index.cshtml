@using YahooFantasy.Web.Ui.Models
@model FilterViewModel

@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Ajax.BeginForm("Players", "Home", new AjaxOptions { UpdateTargetId = "players" }))
{
	@Html.DropDownListFor(m => m.SelectedYear, new SelectList(Model.Years), new { @class = "form-control" })

	@Html.DropDownListFor(m => m.SelectedPosition.Key, new SelectList(Model.Positions, "Key", "Name"), new { @class = "form-control" })
	
	<input type="submit" class="btn btn-default" />
}

<div id="players">
	@{ Html.RenderPartial("_Players", new List<QuarterbackAnnualViewModel>()); }
</div>